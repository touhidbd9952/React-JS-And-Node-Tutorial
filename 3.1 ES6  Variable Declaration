////// Variable Declaration///////////////////////////////////////////////////////////////////////////

// var 
var a = 45;
console.log(a);
var a = "Bohubrihi";  // we can declare "var a" when required
console.log(a);

// let 
let b = 35;
console.log(b);
b = "Simanta"  // we can't declare "let b" because variable b already declared. we can only use it
console.log(b);

// const : constant
const c = 23;    //constant variable value can't change
console.log(c);

// Destructing : assigning multiple variable at a time 
let arr = [1 , 5, 19]
let [a, , b] = arr


